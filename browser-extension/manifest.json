{
  "manifest_version": 3,
  "name": "AI Governance Shield",
  "description": "Open source AI policy enforcement",
  "version": "0.3.0",
  "permissions": [
    "webRequest",
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.openai.com/*",
        "*://*.chatgpt.com/*",
        "*://*.anthropic.com/*",
        "*://*.claude.ai/*",
        "*://*.bard.google.com/*",
        "*://*.gemini.google.com/*",
        "*://*.character.ai/*",
        "*://*.replika.com/*",
        "*://*.poe.com/*",
        "*://*.perplexity.ai/*",
        "*://*.you.com/*",
        "*://*.pi.ai/*",
        "*://*.midjourney.com/*",
        "*://*.stability.ai/*",
        "*://*.jasper.ai/*",
        "*://*.copy.ai/*",
        "*://*.writesonic.com/*",
        "*://*.notion.ai/*",
        "*://*.notion.so/*",
        "*://*.copilot.github.com/*",
        "*://*.bing.com/*",
        "*://*.huggingface.co/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
