# Authentication Provider
# Options: 'okta', 'entra', 'mock'
NEXT_PUBLIC_AUTH_PROVIDER=mock

# Okta Configuration
NEXT_PUBLIC_OKTA_DOMAIN=your-domain.okta.com
NEXT_PUBLIC_OKTA_CLIENT_ID=your_client_id
NEXT_PUBLIC_OKTA_REDIRECT_URI=http://localhost:3001/callback
# Okta API Token (server-side only)
OKTA_API_TOKEN=your_api_token

# Microsoft Entra ID (Azure AD) Configuration
NEXT_PUBLIC_ENTRA_TENANT_ID=your-tenant-id
NEXT_PUBLIC_ENTRA_CLIENT_ID=your_client_id
NEXT_PUBLIC_ENTRA_REDIRECT_URI=http://localhost:3001/callback
# Entra Client Secret (server-side only)
ENTRA_CLIENT_SECRET=your_client_secret

# Decision API
NEXT_PUBLIC_API_URL=http://localhost:8002

# Optional: Custom Claims Mapping
# Map your IdP's custom claims to user attributes
CLAIM_DEPARTMENT=department
CLAIM_AI_TRAINING=ai_training_completed
CLAIM_APPROVED_SERVICES=approved_services
